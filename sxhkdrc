#
# bspwm hotkeys
#

#Get a random background
super + b
	feh --randomize --bg-scale /home/time/wallpaper/*

#Quit panel bspc and xorg
super + alt + Escape
	pkill -x panel; bspc quit

#Kill
super + w
	bspc node -c

#Resize
super + {h,j,k,l}
	bspc window -e {right-10,up+10,down-10,left+10}

#Floating/Tiled/Maximize
super + {f,t,m,n}
	bspc node -t {floating,tiled,fullscreen,pseduo_tiled}

#Switch between latest used nodes
super + Tab
	bspc node -f last

#??? Usefull?
super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

#Make focused node largest
super + s
	bspc node -s biggest.local

#Move to workspace
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

#Focus window on mouseclick
~button1
	bspc node pointed -f

#Move
super + button1
	bspc pointer move

# Resize
super + button2
	bspc pointer resize_corner

# Move to back
super + p
	bspc node -l below

#Stop Move,Resize on mouserelease
#super + @button{1-3}
#	bspc pointer -u

#
# wm independent hotkeys
#

#Terminal
super + Return
	urxvt

#Dmenu
#super + space
#	dmenu_run -fn 'Droid Sans Mono-13' -i

#Rofi
super + space
	rofi -fullscreen -fake-transparency -levenshtein-sort -show run -padding 200

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# reload bspc?
super + r
	./~/.config/bspwm/bspwmrc

# Volume increase
XF86AudioRaiseVolume
	amixer -c 0 set Master 5+
	volume -f 'V%i' > "$PANEL_FIFO"

# Volume decrease
XF86AudioLowerVolume
	amixer -c 0 set Master 5-

# Brightness increase
XF86MonBrightnessDown
	xbacklight -inc 20

# Brightness decrease
XF86MonBrightnessUp
	xbacklight -dec 20
